    <script>
        // Timer functionality
        let timeLeft = 30;
        const timerElement = document.getElementById('timer');

        const timer = setInterval(() => {
            timeLeft--;

            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;

            timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;

            if (timeLeft <= 10) {
                timerElement.parentElement.classList.add('bg-red-50');
                timerElement.parentElement.classList.add('timer-pulse');
                timerElement.classList.add('text-red-600');
            }

            if (timeLeft <= 0) {
                clearInterval(timer);
                alert('Time is up! Your quiz will be submitted automatically.');
                // Here you would typically submit the quiz
            }
        }, 1000);

        // Option selection
        document.querySelectorAll('.option-item input').forEach(option => {
            option.addEventListener('change', function() {
                // Remove all selected styles first
                document.querySelectorAll('.option-item').forEach(item => {
                    item.classList.remove('border-blue-500', 'bg-blue-50');
                });

                // Add style to selected option
                if (this.checked) {
                    this.closest('.option-item').classList.add('border-blue-500', 'bg-blue-50');

                    // Show explanation (in a real app, you might want to check if answer is correct first)
                    document.querySelector('.bg-blue-50').classList.remove('hidden');
                }
            });
        });

        // Responsive adjustments
        function handleResize() {
            if (window.innerWidth < 768) {
                document.querySelector('.timer-pulse').classList.remove('timer-pulse');
            } else {
                document.querySelector('.timer-pulse').classList.add('timer-pulse');
            }
        }

        window.addEventListener('resize', handleResize);
        handleResize();
    </script>
